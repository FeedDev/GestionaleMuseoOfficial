@model GestionaleMuseoOfficial.Models.Login

@{
    //ViewBag.Title = "Login";
    Layout = null;
}

<style>
    .loginBody {
        background: linear-gradient(to bottom, #f7f7f7, #e9e9e9);
    }

    .login-container {
        margin: 0 auto;
        max-width: 400px;
        padding: 20px;
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

        .login-container h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        .login-container .form-group {
            margin-bottom: 20px;
        }

            .login-container .form-group label {
                font-weight: bold;
            }

            .login-container .form-group input[type="text"],
            .login-container .form-group input[type="password"] {
                width: 100%;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 5px;
            }

            .login-container .form-group button {
                width: 100%;
                padding: 10px;
                font-size: 16px;
                border: none;
                border-radius: 5px;
                background-color: #007bff; /* Colore blu */
                color: #fff;
                cursor: pointer;
            }

                .login-container .form-group button:hover {
                    background-color: #0056b3; /* Colore blu più scuro al passaggio del mouse */
                }

        .login-container .error-message {
            color: red;
            text-align: center;
        }
</style>




<div class="login-container">
        <div class="login-form">
            <h2>Login</h2>
            @using (Html.BeginForm("Login", "GestionaleMuseo", FormMethod.Post, new { @id = "loginForm" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label for="username">Username</label>
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @id = "username" })
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @id = "password" })
                </div>

                <div class="form-group">
                    <button type="submit" class="btn generalBtn btn-login">Login</button>
                </div>

                if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div class="error-message">@ViewBag.ErrorMessage</div>
                }
            }
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $('#loginForm').submit(function (e) {
                e.preventDefault();
                // Effettua l'operazione di login
                var username = $('#username').val();
                var password = $('#password').val();

                // Esegui la logica di login qui

                // Esempio di azione successiva al login
                alert('Login eseguito con successo!');
            });
        });
    </script>









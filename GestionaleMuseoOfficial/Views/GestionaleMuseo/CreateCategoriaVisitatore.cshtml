@model GestionaleMuseoOfficial.Models.CategorieVisitatori

@{
    ViewBag.Title = "CreateCategoriaVisitatore";
}


<center>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal containerDetails  fw-bold w-50">
            <div class="greenBG containerTitle w-100 mb-0">
                <h4><a href="/GestionaleMuseo/ViewListaCategoriaVisitatori" class="generalBtn"><i class="fa-solid fa-arrow-left"></i></a> Crea una nuova categoria</h4>
            </div>
            <p class="my-3"></p>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="col-6">
                <div class="form-group my-2">
                    @Html.LabelFor(model => model.Descrizione, htmlAttributes: new { @class = "control-label col-md-8" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Descrizione, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Descrizione, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group my-2">
                    @Html.LabelFor(model => model.TipoDocumento, "Tipo documento", htmlAttributes: new { @class = "control-label col-md-8" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TipoDocumento, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TipoDocumento, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group my-2">
                    @Html.LabelFor(model => model.PercentualeSconto, "Sconto in percentuale", htmlAttributes: new { @class = "control-label col-md-8" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.PercentualeSconto, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.PercentualeSconto, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Aggiungi" class="generalBtn my-4" />
                    </div>
                </div>
            </div>
        </div>
    }
</center>

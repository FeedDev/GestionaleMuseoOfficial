@model GestionaleMuseoOfficial.Models.Biglietti

    @{
        ViewBag.Title = "EditBiglietto";
    }

<center>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal containerDetails  fw-bold w-50">
            <div class="greenBG containerTitle w-100 mb-0">
                <h4><a href="/GestionaleMuseo/ViewListaBiglietti" class="generalBtn"><i class="fa-solid fa-arrow-left"></i></a> Modifica il biglietto numero @Model.IdBiglietto</h4>
            </div>
            <p class="my-3"></p>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.IdBiglietto)
                <div class="form-group my-2">
                    @Html.LabelFor(model => model.DataValidita, "Data validità", htmlAttributes: new { @class = "control-label col-md-4"})
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DataValidita, new { htmlAttributes = new { @class = "form-control", type="date"} })
                        @Html.ValidationMessageFor(model => model.DataValidita, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group my-2">
                    @Html.LabelFor(model => model.IdVisita, "Nome visita", htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.IdVisita, ViewBag.IdVisita as SelectList, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IdVisita, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group my-2">
                    @Html.LabelFor(model => model.IdCliente, "Nominativo", htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.IdCliente, ViewBag.IdCliente as SelectList, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IdCliente, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group my-2">
                    @Html.LabelFor(model => model.IdCategorieVisitatori, "Categoria cliente", htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.IdCategorieVisitatori, ViewBag.IdCategorieVisitatori as SelectList, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IdCategorieVisitatori, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group my-2">
                    @Html.LabelFor(model => model.PrezzoTotale, "Prezzo totale", htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.PrezzoTotale, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.PrezzoTotale, "", new { @class = "text-danger" })
                    </div>
                </div>
                   
                


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Salva" class="generalBtn my-4" />
                </div>
            </div>
        </div>
     }
</center>












































